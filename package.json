{
  "name": "dogshell-ts",
  "version": "0.1.0",
  "description": "Modern TypeScript CLI for the Datadog API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dog": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsup --watch --onSuccess 'bun dist/cli.js'",
    "dev:tui": "tsup --watch --onSuccess 'bun dist/cli.js ui'",
    "build": "tsup",
    "start": "tsup && bun dist/cli.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepare": "husky"
  },
  "keywords": [
    "datadog",
    "cli",
    "monitoring",
    "metrics",
    "logs"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/immasandwich/dogshell-ts.git"
  },
  "bugs": {
    "url": "https://github.com/immasandwich/dogshell-ts/issues"
  },
  "homepage": "https://github.com/immasandwich/dogshell-ts#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "ink": "^6.6.0",
    "pastel": "^4.0.0",
    "react": "^19.2.3",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/react": "^19.2.9",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
